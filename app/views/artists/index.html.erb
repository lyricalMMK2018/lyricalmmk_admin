<% flash.each do |key, value| %>
	<div style="color: red;">
		<%= value %>
	</div>
<% end %>
<div>
	<h4>アーティスト新規追加</h4>
	<%= form_for(@artist) do |f| %>
		<p>
			アーティスト名 <%= f.text_field :artist_name, autofocus: true %>
			<%= f.submit '追加' %>
		</p>
	<% end %>
</div>
<div>
	<h4>アーティスト一覧</h4>
	<table>
		<tr>
			<th>アーティスト名</th>
		</tr>
		<% @artists.each do |artist| %>
			<tr>
				<%= form_for(artist) do |f| %>
					<th><%= f.text_field :artist_name, autofocus: true %></th>
					<th><%= f.submit '編集' %></th>
				<% end %>
				<th><%= link_to "削除", artist_path(artist), method: :delete, data: { confirm: "削除します。続行しますか？" } %></th>
			</tr>
		<% end %>
	</table>
	<%= paginate @artists %>
</div>

